# Production Environment Configuration for Parroquia Server

# ===== NODE.JS CONFIGURATION =====
NODE_ENV=production
PORT=5000

# ===== DATABASE CONFIGURATION =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=parroquia_db
DB_USER=parroquia_user
DB_PASSWORD=ParroquiaSecure2025

# ===== JWT CONFIGURATION =====
JWT_SECRET=ParroquiaSecretKey2025VeryLongAndSecureForProductionUse123!
JWT_REFRESH_SECRET=ParroquiaRefreshSecretKey2025DifferentFromMainSecretForSecurity456!
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== ENCRYPTION CONFIGURATION =====
BCRYPT_ROUNDS=12

# ===== FRONTEND CONFIGURATION =====
FRONTEND_URL=http://206.62.139.100

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=admin@parroquia.com
SMTP_PASS=your-gmail-app-password-here
EMAIL_FROM=noreply@parroquia.com
SMTP_FROM_EMAIL=noreply@parroquia.com
SEND_REAL_EMAILS=false

# ===== LOGGING CONFIGURATION =====
VERBOSE_LOGGING=false

# ===== SECURITY HEADERS =====
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://206.62.139.100,http://localhost:3000

# ===== HEALTH CHECKS =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health

# ===== PM2 MONITORING =====
PM2_PUBLIC_KEY=
PM2_SECRET_KEY=
