# Production Environment Configuration
# Copy this file to .env.production and update the values for your server

# ===== NODE.JS CONFIGURATION =====
NODE_ENV=production
PORT=3000

# ===== DATABASE CONFIGURATION =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=parroquia_db
DB_USER=parroquia_user
DB_PASS=CHANGE_THIS_DATABASE_PASSWORD_IN_PRODUCTION

# ===== JWT CONFIGURATION =====
# IMPORTANT: Change these secrets in production!
JWT_SECRET=CHANGE_THIS_JWT_SECRET_TO_A_STRONG_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_TO_A_STRONG_RANDOM_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== ENCRYPTION CONFIGURATION =====
BCRYPT_ROUNDS=12

# ===== FRONTEND CONFIGURATION =====
# Update this to your actual domain or IP address
FRONTEND_URL=http://206.62.139.100

# ===== EMAIL CONFIGURATION =====
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourparroquia.com
SMTP_FROM_EMAIL=noreply@yourparroquia.com
SEND_REAL_EMAILS=true

# ===== LOGGING CONFIGURATION =====
VERBOSE_LOGGING=false

# ===== PM2 MONITORING (Optional) =====
# If you want to use PM2 monitoring, get these keys from https://app.pm2.io
PM2_PUBLIC_KEY=
PM2_SECRET_KEY=

# ===== SECURITY HEADERS =====
# Enable HSTS and other security features in production
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== FILE UPLOAD LIMITS =====
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://206.62.139.100,https://yourparroquia.com

# ===== SSL/TLS CONFIGURATION =====
# If using HTTPS directly in Node.js (not recommended, use nginx proxy instead)
HTTPS_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# ===== MONITORING AND HEALTH CHECKS =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health

# ===== BACKUP CONFIGURATION =====
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
