{
  "name": "parroquia-api",
  "version": "1.0.0",
  "description": "API REST para gesti√≥n de parroquia",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:https": "node src/app.js --https",
    "dev": "nodemon src/app.js",
    "dev:https": "nodemon src/app.js --https",
    "ssl:create": "node scripts/create-ssl-cert.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest --coverage --detectOpenHandles --forceExit",
    "test:auth": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth --detectOpenHandles --forceExit",
    "test:auth:register": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/register-simple.test.js --detectOpenHandles --forceExit",
    "test:auth:login": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/login-simple.test.js --detectOpenHandles --forceExit",
    "test:auth:email": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/email-verification.test.js --detectOpenHandles --forceExit",
    "test:auth:tokens": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/token-management.test.js --detectOpenHandles --forceExit",
    "test:auth:password": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/password-recovery.test.js --detectOpenHandles --forceExit",
    "test:auth:protected": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/protected-endpoints.test.js --detectOpenHandles --forceExit",
    "test:epics": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest tests/auth/user-crud-epics.test.js --detectOpenHandles --forceExit",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:load-catalogs": "node loadCatalogData.js"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "rest"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^9.31.0",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.8",
    "pg": "^8.16.3",
    "sequelize": "^6.32.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended"
  }
}
