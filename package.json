{
  "name": "parroquia-api",
  "version": "1.0.0",
  "description": "API REST para gesti√≥n de parroquia",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:https": "node src/app.js --https",
    "start:prod": "NODE_ENV=production node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:https": "nodemon src/app.js --https",
    "dev:local": "cp .env.development .env && nodemon src/app.js",
    "docker:dev": "docker-compose up --build",
    "docker:db": "docker-compose up postgres -d",
    "docker:down": "docker-compose down",
    "docker:secure": "docker-compose -f docker-compose.secure.yml up -d",
    "docker:secure:down": "docker-compose -f docker-compose.secure.yml down",
    "ssl:create": "node scripts/create-ssl-cert.js",
    "admin:create": "node createAdminUser.js",
    "admin:update-email": "node updateAdminEmail.js",
    "db:sync": "node syncDatabase.js",
    "db:sync:alter": "node syncDatabaseAlter.js",
    "db:sync:force": "node syncDatabaseForce.js",
    "db:sync:complete": "node syncDatabaseComplete.js",
    "db:sync:complete:alter": "node syncDatabaseComplete.js alter",
    "db:sync:complete:force": "node syncDatabaseComplete.js force",
    "db:check": "node checkDatabase.js",
    "db:reset": "npm run db:sync && npm run db:seed",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:seed:status": "npx sequelize-cli db:seed:status",
    "db:seed:config": "node runSeeders.js",
    "db:seed:clean": "node runSeeders.js clean",
    "db:seed:reseed": "node runSeeders.js reseed",
    "db:seed:verify": "node verify-seeders.js",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:load-catalogs": "node loadCatalogData.js",
    "db:fix": "node scripts/fix-database.js",
    "db:setup": "npm run db:fix && npm start",
    "db:setup-full": "node run-migrations.js",
    "deploy:check": "bash pre-deploy.sh",
    "deploy:prod": "bash deploy.sh",
    "deploy:prod:pm2": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 deploy",
    "deploy:logs": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 logs",
    "deploy:status": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 status",
    "deploy:stop": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 stop",
    "deploy:restart": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 restart",
    "deploy:backup": "powershell -ExecutionPolicy Bypass -File deploy-prod.ps1 backup",
    "pm2:start": "npx pm2 start ecosystem.config.cjs",
    "pm2:stop": "npx pm2 stop ecosystem.config.cjs",
    "pm2:restart": "npx pm2 restart ecosystem.config.cjs",
    "pm2:logs": "npx pm2 logs",
    "pm2:status": "npx pm2 status"
  },
  "keywords": [
    "node",
    "express",
    "api",
    "rest"
  ],
  "author": "amph7019@gmail.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.8",
    "pg": "^8.16.3",
    "sequelize": "^6.37.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "extends": "eslint:recommended"
  }
}
