# Dokploy Environment Variables for Parroquia API
# Copy this file to .env in your Dokploy deployment

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
PORT=5000

# ===== DATABASE CONFIGURATION =====
DB_HOST=postgres
DB_PORT=5432
DB_NAME=parroquia_db
DB_USER=parroquia_user
DB_PASSWORD=ParroquiaSecure2025

# ===== SECURITY CONFIGURATION =====
# IMPORTANT: Change these in production!
JWT_SECRET=CHANGE_THIS_JWT_SECRET_TO_A_STRONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_TO_A_DIFFERENT_STRONG_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===== APPLICATION URLS =====
# Update this to your actual domain
FRONTEND_URL=https://your-domain.com

# ===== EMAIL CONFIGURATION =====
# Configure these if you want to send emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com
SEND_REAL_EMAILS=true

# ===== LOGGING CONFIGURATION =====
VERBOSE_LOGGING=false

# ===== SECURITY FEATURES =====
ENABLE_HSTS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== POSTGRES PERFORMANCE TUNING =====
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_MAX_CONNECTIONS=100

# ===== HEALTH CHECK CONFIGURATION =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/api/health
